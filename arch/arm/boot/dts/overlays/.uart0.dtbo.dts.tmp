# 1 "arch/arm/boot/dts/overlays/uart0-overlay.dts"
# 1 "<built-in>"
# 1 "<command-line>"
# 1 "arch/arm/boot/dts/overlays/uart0-overlay.dts"
/dts-v1/;
/plugin/;

/{
 compatible = "brcm,bcm2835";

 fragment@0 {
  target = <&uart0>;
  __overlay__ {
   pinctrl-names = "default";
   pinctrl-0 = <&uart0_pins>;
   status = "okay";
  };
 };

 fragment@1 {
  target = <&gpio>;
  __overlay__ {
   uart0_pins: uart0_pins {
    brcm,pins = <14 15 14 15>;
    brcm,function = <0 0 4 4>;
    brcm,pull = <0 0 0 2>;
   };
  };
 };

 __overrides__ {
  txd0_pin = <&uart0_pins>,"brcm,pins:8";
  rxd0_pin = <&uart0_pins>,"brcm,pins:12";
  pin_func = <&uart0_pins>,"brcm,function:8",
      <&uart0_pins>,"brcm,function:12";
 };
};
